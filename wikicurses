#! /usr/bin/env python3

import sys
import argparse
import wikicurses.ui as ui
from wikicurses.settings import conf

parser = argparse.ArgumentParser(
        description="A simple curses interface for accessing Wikipedia.")

parser.add_argument('search',
                    nargs = '?',
                    default = 'Main page',
                    help = "page to search for")
parser.add_argument('-w', '--wiki', help='wiki api url')
#For shell completion functions
parser.add_argument('--complete',
                    action = 'store',
                    help = argparse.SUPPRESS)

group = parser.add_mutually_exclusive_group()
group.add_argument('-d', '--today',
                    action = 'store_const',
                    const = 'onthisday',
                    help='list "On This Day" pages')
group.add_argument('-f', '--featured',
                    action = 'store_const',
                    const = 'featured',
                    help = 'show featured articles')
group.add_argument('-p', '--picture',
                    action = 'store_const',
                    const = 'potd',
                    help='show pictures of the day')

args = parser.parse_args()
ui.openWiki(args.wiki)

if args.complete:
    if args.complete == 'search':
        sugestions = ui.wiki.search_sugestions(args.search)
    elif args.complete == 'wiki':
        sugestions = (i for i in conf if i not in ('general', 'DEFAULT'))
    print(*sugestions, sep='\n')
    sys.exit()

feed = args.featured or args.picture or args.today
if feed:
    ui.setContent(ui.wiki.get_featured_feed(feed))
else:
    ui.setContent(ui.wiki.search(args.search))
ui.loop.run()
